<!-- views/user_new.ejs -->
<section class="hero">
  <div class="container">
    <h2>Create a New User</h2>
    <p>Provide first/last name, a valid email, and a password (min 6 chars).</p>
  </div>
</section>

<section>
  <div class="container">
    <div class="card">
      <form action="/users" method="POST" novalidate>
        <div>
          <label for="first">First Name</label><br />
          <input
            id="first"
            name="first"
            type="text"
            value="<%= values?.first || '' %>"
            required
          />
          <% if (errors?.first) { %>
            <small class="field-error"><%= errors.first %></small>
          <% } %>
        </div>

        <div>
          <label for="last">Last Name</label><br />
          <input
            id="last"
            name="last"
            type="text"
            value="<%= values?.last || '' %>"
            required
          />
          <% if (errors?.last) { %>
            <small class="field-error"><%= errors.last %></small>
          <% } %>
        </div>

        <div>
          <label for="email">Email</label><br />
          <input
            id="email"
            name="email"
            type="email"
            value="<%= values?.email || '' %>"
            required
          />
          <% if (errors?.email) { %>
            <small class="field-error"><%= errors.email %></small>
          <% } %>
        </div>

        <div>
          <label for="zipCode">Zip Code (optional)</label><br />
          <input
            id="zipCode"
            name="zipCode"
            type="text"
            value="<%= values?.zipCode || '' %>"
          />
          <% if (errors?.zipCode) { %>
            <small class="field-error"><%= errors.zipCode %></small>
          <% } %>
        </div>

        <div>
          <label for="password">Password</label><br />
          <input
            id="password"
            name="password"
            type="password"
            value=""
            required
          />
          <% if (errors?.password) { %>
            <small class="field-error"><%= errors.password %></small>
          <% } %>
        </div>

        <% if (errors?._general) { %>
          <p><small class="field-error"><%= errors._general %></small></p>
        <% } %>

        <div style="margin-top: 1rem;">
          <button type="submit" class="btn">Create User</button>
          <a href="/users" class="btn">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</section>
