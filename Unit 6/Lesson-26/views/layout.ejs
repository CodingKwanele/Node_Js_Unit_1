<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content="My Recipe Web â€” Cook, Learn, Share" />
  <title><%= (typeof title !== 'undefined' && title) ? title : "My Recipe Web" %></title>

  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
  <a href="#main-content" class="visually-hidden-focusable">Skip to main content</a>

  <header class="py-3 border-bottom">
    <div class="container">
      <h1 class="h3 m-0">
        <a href="/home" class="text-decoration-none text-body">My Recipe Web</a>
      </h1>

      <nav aria-label="Main navigation" class="mt-2">
        <ul class="nav nav-pills gap-2">
          <li class="nav-item"><a class="nav-link" href="/home">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
          <li class="nav-item"><a class="nav-link" href="/subscribers">Subscribers</a></li>
          <li class="nav-item"><a class="nav-link" href="/users">Users</a></li>
          <li class="nav-item"><a class="nav-link" href="/courses">Courses</a></li>
          <li class="nav-item"><a class="nav-link" href="/subscribers/contact">Contact</a></li>
          <!-- Modal trigger + markup (global) -->
          <li class="nav-item"><%- include('courses/_coursesModal') %></li>
        </ul>
      </nav>

      <div class="mt-2">
        <% if (loggedIn && currentUser) { %>
          <span class="fw-semibold">Logged in as</span>
          <a href="/users/<%= currentUser._id %>" class="mx-2"><%= currentUser.fullName || currentUser.email %></a>
          <span class="text-muted">|</span>
          <a href="/users/logout" class="ms-2">Logout</a>
        <% } else { %>
          <a href="/users/login">Login</a>
          <span class="text-muted mx-1">|</span>
          <a href="/users/new">Sign up</a>
        <% } %>
      </div>
    </div>
  </header>

  <!-- Flash -->
  <section aria-live="polite" aria-atomic="true" class="py-2">
    <div class="container">
      <% if (flashMessages && flashMessages.error) { %>
        <div class="alert alert-danger"><%= flashMessages.error %></div>
      <% } %>
      <% if (flashMessages && flashMessages.success) { %>
        <div class="alert alert-success"><%= flashMessages.success %></div>
      <% } %>
    </div>
  </section>

  <main id="main-content" class="container py-3">
    <%- body %>
  </main>

  <footer class="py-3 border-top">
    <div class="container">
      <p class="m-0">&copy; <%= new Date().getFullYear() %> My Recipe Web. Cook, Learn, and Share with Us.</p>
    </div>
  </footer>

  <!-- Bootstrap 5 JS bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer></script>
  <!-- Modal loader -->
    <script src="/Unit 6/Lesson-26/public/js/courses-modal.js" defer></script>
</body>
</html>
