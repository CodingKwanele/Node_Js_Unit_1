<!-- Edit Course Page -->
<section class="hero py-5 bg-light" aria-labelledby="edit-course-heading">
  <div class="container">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb mb-3">
        <li class="breadcrumb-item"><a href="/courses">Courses</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit Course</li>
      </ol>
    </nav>
    <h2 id="edit-course-heading" class="display-6 fw-semibold mb-2">Edit Course</h2>
    <p class="text-muted mb-0">Update the fields below and save your changes.</p>
  </div>
</section>

<section class="py-4">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card shadow-sm border-0 lift">
          <div class="card-body p-4 p-md-5">
            <form action="/courses/<%= id %>?_method=PUT" method="POST" novalidate id="editCourseForm">
              <!-- Title -->
              <div class="mb-4">
                <label for="title" class="form-label fw-semibold">
                  Course Title <span class="text-danger">*</span>
                </label>
                <input 
                  id="title" 
                  name="title" 
                  type="text" 
                  class="form-control <%= errors?.title ? 'is-invalid' : '' %>" 
                  value="<%= values?.title || '' %>" 
                  required 
                  placeholder="e.g., Advanced Italian Cooking"
                  aria-describedby="titleHelp <%= errors?.title ? 'titleError' : '' %>"
                  maxlength="100"
                />
                <div id="titleHelp" class="form-text">
                  Give your course a clear, descriptive title (max 100 characters)
                </div>
                <% if (errors?.title) { %>
                  <div id="titleError" class="invalid-feedback d-block">
                    <%= errors.title %>
                  </div>
                <% } %>
              </div>

              <!-- Description -->
              <div class="mb-4">
                <label for="description" class="form-label fw-semibold">
                  Description <span class="text-danger">*</span>
                </label>
                <textarea 
                  id="description" 
                  name="description" 
                  rows="5" 
                  class="form-control <%= errors?.description ? 'is-invalid' : '' %>" 
                  required 
                  placeholder="Describe what students will learn in this course..."
                  aria-describedby="descriptionHelp <%= errors?.description ? 'descriptionError' : '' %>"
                  maxlength="500"
                ><%= values?.description || '' %></textarea>
                <div id="descriptionHelp" class="form-text">
                  Provide a detailed description of the course content (max 500 characters)
                </div>
                <% if (errors?.description) { %>
                  <div id="descriptionError" class="invalid-feedback d-block">
                    <%= errors.description %>
                  </div>
                <% } %>
              </div>

              <!-- Zip Code -->
              <div class="mb-4">
                <label for="zipCode" class="form-label fw-semibold">
                  Zip Code
                  <span class="badge bg-secondary bg-opacity-10 text-dark ms-2">Optional</span>
                </label>
                <input 
                  id="zipCode" 
                  name="zipCode" 
                  type="text" 
                  class="form-control <%= errors?.zipCode ? 'is-invalid' : '' %>" 
                  value="<%= values?.zipCode || '' %>" 
                  placeholder="e.g., 10001"
                  aria-describedby="zipCodeHelp <%= errors?.zipCode ? 'zipCodeError' : '' %>"
                  pattern="[0-9]{4,5}"
                  maxlength="5"
                />
                <div id="zipCodeHelp" class="form-text">
                  Enter the zip code where this course is available
                </div>
                <% if (errors?.zipCode) { %>
                  <div id="zipCodeError" class="invalid-feedback d-block">
                    <%= errors.zipCode %>
                  </div>
                <% } %>
              </div>

              <!-- Items -->
              <div class="mb-4">
                <label for="items" class="form-label fw-semibold">
                  Course Items
                  <span class="badge bg-secondary bg-opacity-10 text-dark ms-2">Optional</span>
                </label>
                <input 
                  id="items" 
                  name="items" 
                  type="text" 
                  class="form-control" 
                  value="<%= values?.items || '' %>"
                  placeholder="e.g., knife skills, sauces, pasta making"
                  aria-describedby="itemsHelp"
                />
                <div id="itemsHelp" class="form-text">
                  Enter items separated by commas. Example: "knife skills, basic sauces, meal prep"
                </div>
                <div id="itemsPreview" class="mt-2"></div>
              </div>

              <!-- General Error -->
              <% if (errors?._general) { %>
                <div class="alert alert-danger" role="alert">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-exclamation-triangle-fill me-2" viewBox="0 0 16 16">
                    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                  </svg>
                  <%= errors._general %>
                </div>
              <% } %>

              <!-- Required Fields Note -->
              <div class="alert alert-info mb-4" role="alert">
                <small>
                  <span class="text-danger">*</span> Required fields
                </small>
              </div>

              <!-- Action Buttons -->
              <div class="d-flex flex-wrap gap-2">
                <button type="submit" class="btn btn-primary" id="submitBtn">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-lg me-2" viewBox="0 0 16 16">
                    <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425a.247.247 0 0 1 .02-.022Z"/>
                  </svg>
                  Save Changes
                </button>
                <a href="/courses" class="btn btn-outline-secondary">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg me-2" viewBox="0 0 16 16">
                    <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z"/>
                  </svg>
                  Cancel
                </a>
                <button 
                  type="button" 
                  class="btn btn-outline-danger ms-auto" 
                  data-bs-toggle="modal" 
                  data-bs-target="#deleteModal"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash me-2" viewBox="0 0 16 16">
                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"/>
                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"/>
                  </svg>
                  Delete Course
                </button>
              </div>
            </form>
          </div>
        </div>

        <!-- Help Card -->
        <div class="card mt-4 border-0 bg-light">
          <div class="card-body">
            <h3 class="h6 fw-semibold mb-2">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle me-2" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
              </svg>
              Tips for Editing Courses
            </h3>
            <ul class="mb-0 small">
              <li>Use a clear, descriptive title that tells students what they'll learn</li>
              <li>Include specific details in the description to set proper expectations</li>
              <li>List course items to give students a preview of the curriculum</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header border-0">
        <h5 class="modal-title fw-semibold" id="deleteModalLabel">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle text-danger me-2" viewBox="0 0 16 16">
            <path d="M7.938 2.016A.13.13 0 0 1 8.002 2a.13.13 0 0 1 .063.016.146.146 0 0 1 .054.057l6.857 11.667c.036.06.035.124.002.183a.163.163 0 0 1-.054.06.116.116 0 0 1-.066.017H1.146a.115.115 0 0 1-.066-.017.163.163 0 0 1-.054-.06.176.176 0 0 1 .002-.183L7.884 2.073a.147.147 0 0 1 .054-.057zm1.044-.45a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566z"/>
            <path d="M7.002 12a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 5.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995z"/>
          </svg>
          Confirm Deletion
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p class="mb-0">
          Are you sure you want to delete this course? This action cannot be undone and all course data will be permanently removed.
        </p>
      </div>
      <div class="modal-footer border-0">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <form action="/courses/<%= id %>/delete?_method=DELETE" method="POST" class="d-inline">
          <button type="submit" class="btn btn-danger">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash me-2" viewBox="0 0 16 16">
              <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"/>
              <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"/>
            </svg>
            Delete Course
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  (function() {
    'use strict';

    const form = document.getElementById('editCourseForm');
    const titleInput = document.getElementById('title');
    const descriptionInput = document.getElementById('description');
    const zipCodeInput = document.getElementById('zipCode');
    const itemsInput = document.getElementById('items');
    const itemsPreview = document.getElementById('itemsPreview');
    const submitBtn = document.getElementById('submitBtn');

    // Character counter for title
    if (titleInput) {
      const maxLength = titleInput.getAttribute('maxlength');
      const helpText = document.getElementById('titleHelp');
      
      titleInput.addEventListener('input', function() {
        const remaining = maxLength - this.value.length;
        helpText.innerHTML = `Give your course a clear, descriptive title <span class="text-muted">(${remaining} characters remaining)</span>`;
      });
    }

    // Character counter for description
    if (descriptionInput) {
      const maxLength = descriptionInput.getAttribute('maxlength');
      const helpText = document.getElementById('descriptionHelp');
      
      descriptionInput.addEventListener('input', function() {
        const remaining = maxLength - this.value.length;
        helpText.innerHTML = `Provide a detailed description of the course content <span class="text-muted">(${remaining} characters remaining)</span>`;
      });
    }

    // Items preview with badges
    if (itemsInput && itemsPreview) {
      function updateItemsPreview() {
        const value = itemsInput.value.trim();
        if (!value) {
          itemsPreview.innerHTML = '';
          return;
        }

        const items = value.split(',').map(item => item.trim()).filter(item => item);
        if (items.length === 0) {
          itemsPreview.innerHTML = '';
          return;
        }

        const badges = items.map(item => 
          `<span class="badge bg-primary bg-opacity-10 text-primary me-1 mb-1">${escapeHtml(item)}</span>`
        ).join('');

        itemsPreview.innerHTML = `
          <div class="small text-muted mb-1">Preview:</div>
          <div>${badges}</div>
        `;
      }

      itemsInput.addEventListener('input', updateItemsPreview);
      
      // Initial preview on page load
      updateItemsPreview();
    }

    // Form validation
    if (form) {
      form.addEventListener('submit', function(event) {
        let isValid = true;

        // Title validation
        if (titleInput && !titleInput.value.trim()) {
          titleInput.classList.add('is-invalid');
          isValid = false;
        } else if (titleInput) {
          titleInput.classList.remove('is-invalid');
        }

        // Description validation
        if (descriptionInput && !descriptionInput.value.trim()) {
          descriptionInput.classList.add('is-invalid');
          isValid = false;
        } else if (descriptionInput) {
          descriptionInput.classList.remove('is-invalid');
        }

        // Zip code validation (if provided)
        if (zipCodeInput && zipCodeInput.value.trim()) {
          const zipPattern = /^[0-9]{4,5}$/;
          if (!zipPattern.test(zipCodeInput.value.trim())) {
            zipCodeInput.classList.add('is-invalid');
            isValid = false;
          } else {
            zipCodeInput.classList.remove('is-invalid');
          }
        }

        if (!isValid) {
          event.preventDefault();
          event.stopPropagation();
          
          // Scroll to first error
          const firstError = form.querySelector('.is-invalid');
          if (firstError) {
            firstError.scrollIntoView({ behavior: 'smooth', block: 'center' });
            firstError.focus();
          }
        } else {
          // Show loading state
          submitBtn.disabled = true;
          submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Saving...';
        }
      });
    }

    // Real-time validation feedback
    [titleInput, descriptionInput].forEach(input => {
      if (input) {
        input.addEventListener('blur', function() {
          if (!this.value.trim()) {
            this.classList.add('is-invalid');
          } else {
            this.classList.remove('is-invalid');
          }
        });

        input.addEventListener('input', function() {
          if (this.classList.contains('is-invalid') && this.value.trim()) {
            this.classList.remove('is-invalid');
          }
        });
      }
    });

    // Zip code validation on blur
    if (zipCodeInput) {
      zipCodeInput.addEventListener('blur', function() {
        if (this.value.trim()) {
          const zipPattern = /^[0-9]{4,5}$/;
          if (!zipPattern.test(this.value.trim())) {
            this.classList.add('is-invalid');
          } else {
            this.classList.remove('is-invalid');
          }
        } else {
          this.classList.remove('is-invalid');
        }
      });
    }

    // Utility function to escape HTML
    function escapeHtml(text) {
      const map = {
        '&': '&amp;',
        '<': '&lt;',
        '>': '&gt;',
        '"': '&quot;',
        "'": '&#039;'
      };
      return text.replace(/[&<>"']/g, m => map[m]);
    }
  })();
</script>
