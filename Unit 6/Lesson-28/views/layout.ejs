<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content="My Recipe Web â€” Cook, Learn, Share" />
  <title><%= (typeof title !== 'undefined' && title) ? title : "My Recipe Web" %></title>

  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
  <a href="#main-content" class="visually-hidden-focusable">Skip to main content</a>

  <header class="py-3 border-bottom">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center">
        <h1 class="h3 m-0">
          <a href="/home" class="text-decoration-none text-body">My Recipe Web</a>
        </h1>

        <!-- Mobile menu toggle button -->
        <button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="collapse" 
                data-bs-target="#navbarNav" aria-controls="navbarNav" 
                aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      </div>

      <!-- Navigation with collapse for mobile -->
      <nav aria-label="Main navigation" class="mt-2">
        <div class="collapse navbar-collapse d-lg-block" id="navbarNav">
          <ul class="nav nav-pills flex-column flex-lg-row gap-2">
            <li class="nav-item">
              <a class="nav-link <%= (typeof currentPath !== 'undefined' && currentPath === '/home') ? 'active' : '' %>" 
                 href="/home">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= (typeof currentPath !== 'undefined' && currentPath === '/about') ? 'active' : '' %>" 
                 href="/about">About</a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= (typeof currentPath !== 'undefined' && currentPath.startsWith('/subscribers')) ? 'active' : '' %>" 
                 href="/subscribers">Subscribers</a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= (typeof currentPath !== 'undefined' && currentPath.startsWith('/users')) ? 'active' : '' %>" 
                 href="/users">Users</a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= (typeof currentPath !== 'undefined' && currentPath.startsWith('/courses')) ? 'active' : '' %>" 
                 href="/courses">Courses</a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= (typeof currentPath !== 'undefined' && currentPath === '/subscribers/contact') ? 'active' : '' %>" 
                 href="/subscribers/contact">Contact</a>
            </li>
            <li class="nav-item">
              <%- include('courses/_coursesModalButton') %>
            </li>
          </ul>
        </div>
      </nav>

      <!-- User authentication section -->
      <div class="mt-3">
        <% if (loggedIn && currentUser) { %>
          <span class="fw-semibold">Logged in as</span>
          <a href="/users/<%= currentUser._id %>" class="mx-2">
            <%= currentUser.fullName || currentUser.email %>
          </a>
          <span class="text-muted">|</span>
          <a href="/users/logout" class="ms-2">Logout</a>
        <% } else { %>
          <a href="/users/login">Login</a>
          <span class="text-muted mx-1">|</span>
          <a href="/users/new">Sign up</a>
        <% } %>
      </div>
    </div>
  </header>

  <!-- Modal moved outside header for proper z-index stacking -->
  <%- include('courses/_coursesModal') %>

  <!-- Flash messages with accessibility -->
  <section aria-live="polite" aria-atomic="true" class="py-2">
    <div class="container">
      <% if (flashMessages && flashMessages.error) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= flashMessages.error %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
      <% if (flashMessages && flashMessages.success) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= flashMessages.success %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
    </div>
  </section>

  <!-- Main content area -->
  <main id="main-content" class="container py-4">
    <%- body %>
  </main>

  <!-- Footer -->
  <footer class="py-4 mt-5 border-top bg-light">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <p class="m-0">&copy; <%= new Date().getFullYear() %> My Recipe Web. Cook, Learn, and Share with Us.</p>
        </div>
        <div class="col-md-6 text-md-end">
          <a href="/home" class="text-decoration-none me-3">Home</a>
          <a href="/about" class="text-decoration-none me-3">About</a>
          <a href="/subscribers/contact" class="text-decoration-none">Contact</a>
        </div>
      </div>
    </div>
  </footer>

  <!-- Bootstrap 5 JS bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Custom courses modal script -->
  <script src="/js/courses-modal.js" defer></script>
</body>
</html>
